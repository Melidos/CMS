{% extends 'base.html.twig' %}

{% block title %}CMS{% endblock %}

{% block body %}
    <div class="card my-3">
        <h5 class="card-header">{{ post.title }}</h5>
        <div class="card-body">
            <h6 class="card-title">Posted at {{ post.date|date("H:m") }} on {{ post.date|date("d-m-Y") }}</h6>
            <p class="card-text">{{ post.text }}</p>
        </div>
    </div>
{% endblock %}
